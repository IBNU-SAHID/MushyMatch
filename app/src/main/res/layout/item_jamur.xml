<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/custom_bg_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_mushroom"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/sample_mushroom" />

    <TextView
        android:id="@+id/tv_recipes_name"
        android:layout_width="253dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/nama_jamur"
        android:textColor="@color/black"
        android:textSize="18sp"

        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_mushroom"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recipes_name2"
        android:layout_width="253dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="@string/nama_ilmiah"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/image_mushroom"
        app:layout_constraintTop_toBottomOf="@+id/tv_recipes_name" />


</androidx.constraintlayout.widget.ConstraintLayout>